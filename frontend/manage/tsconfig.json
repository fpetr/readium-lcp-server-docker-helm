{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist/app",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
        "app/**/*"
    ],
  "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "node_modules/@types/jasmine/index.d.ts"
  ]
}
